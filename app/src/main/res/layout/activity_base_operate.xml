<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.rfid.app.BaseOperateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="startAutoFindCard"
            android:text="开启自动寻卡"
            android:textSize="12sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="closeAutoFindCard"
            android:text="关闭自动寻卡"
            android:textSize="12sp" />


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="startBuzzer"
            android:text="开启蜂鸣器"
            android:textSize="12sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="stopBuzzer"
            android:text="关闭蜂鸣器"
            android:textSize="12sp" />


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="closeAllAntenna"
            android:text="关闭所有天线"
            android:textSize="12sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="manuallyDetectingCard"
            android:text="手动寻卡"
            android:textSize="12sp" />


    </LinearLayout>
</ScrollView>